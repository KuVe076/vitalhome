---
import AgendaFormulario from '../components/AgendaFormulario.astro';
import AgendaConsulta from '../components/AgendaConsulta.astro';
import '../styles/agenda.css';
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Agenda de Pacientes - VitalHome</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
  </head>
  <body class="p-3">
    <div class="container bg-white rounded shadow p-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <img src="/vitalhome_logo.png" alt="VitalHome" class="logo" />
        <h2 class="text-primary">AGENDA DE PACIENTES</h2>
      </div>

      <AgendaFormulario />
      <hr class="my-4" />
      <AgendaConsulta />
      <div id="resultados" class="mt-3"></div>
    </div>

    <script type="module" src="../scripts/agenda.js"></script>
  </body>
</html>