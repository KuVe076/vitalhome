<div class="form-container">
  <img src="/LogoVitalHome.png" alt="Logo VitalHome" />
  <h2>Datos Paciente</h2>
  <form id="pacienteForm">
    <label>RUT</label>
    <input type="text" id="rut" maxlength="12" required />

    <label>Nombre *</label>
    <input type="text" id="nombre" required />

    <label>Apellidos *</label>
    <input type="text" id="apellidos" required />

    <label>Dirección *</label>
    <input type="text" id="direccion" required />

    <label>Región *</label>
    <select id="region" required></select>

    <label>Comuna *</label>
    <select id="comuna" required></select>

    <label>Mail</label>
    <input type="email" id="mail" />

    <label>Fono</label>
    <input type="number" id="fono" />

    <label>Grupo de Sangre</label>
    <input type="text" id="sangre" />

    <div class="button-group">
      <button type="button" id="crearBtn">Crear</button>
      <button type="button" id="editarBtn">Editar</button>
      <button type="submit" id="guardarBtn" disabled>Guardar</button>
    </div>
  </form>
</div>