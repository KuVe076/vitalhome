<div class="form-container">
  <img src="/LogoVitalHome.png" alt="Logo VitalHome" />
  <h2>Antecedentes Profesionales</h2>
  <form id="profesionalForm" enctype="multipart/form-data">
    <label>RUT *</label>
    <input type="text" id="rut" maxlength="12" required />

    <label>Nombre *</label>
    <input type="text" id="nombre" required />

    <label>Apellidos *</label>
    <input type="text" id="apellidos" required />

    <label>Profesión *</label>
    <input type="text" id="profesion" required />

    <label>Registro SIS *</label>
    <input type="text" id="registro" required />

    <label>Mail</label>
    <input type="email" id="mail" />

    <label>Región *</label>
    <select id="region" required></select>

    <label>Comuna *</label>
    <select id="comuna" required></select>

    <label>Fecha de Ingreso *</label>
    <input type="date" id="fecha_ingreso" required />

    <label>Activo *</label>
    <div class="radio-group">
      <label><input type="radio" name="activo" value="SI" required /> SI</label>
      <label><input type="radio" name="activo" value="NO" /> NO</label>
    </div>

    <label>Motivo</label>
    <input type="text" id="motivo" />

    <label>Adjuntar Curriculum Vitae (PDF)</label>
    <input type="file" id="cv" accept="application/pdf" />

    <div class="button-group">
      <button type="button" id="crearBtn">Crear</button>
      <button type="button" id="editarBtn">Editar</button>
      <button type="submit" id="guardarBtn" disabled>Guardar</button>
    </div>
  </form>
</div>